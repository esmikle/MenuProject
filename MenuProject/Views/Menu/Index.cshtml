@model List<MenuProject.Models.Dish>
@{
    ViewData["Title"] = "Menu Index";
}

<div class="container">
    <div class="row">
        @foreach(var dish in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@dish.Name Pizza</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@dish.ImageUrl" style="width: 70%" />
                </div>
                <div class="d-flex justify-content-center">
                    Price: @dish.Price.ToString("N2")
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@dish.Id">Details</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@dish.Id">Edit</a>
                </div>
            </div>
        }
    </div>
</div>

