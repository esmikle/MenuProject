@model MenuProject.Models.Dish
@{
    ViewData["Title"] = "Details";

}

<div class="container">
    
        <h3>@Model.Name</h3>
        <div class="d-flex justify-content-center">
            <img src="@Model.ImageUrl" style="width: 50%" />
        </div>
        <div class="d-flex justify-content-center">
            Price: @Model.Price.ToString("N2")
        </div>
        <div class="d-flex justify-content-center">
            Ingredients:
            <ul>
                @foreach(var item in Model.DishIngredients)
                {
                    <li>@item.Ingredient.Name</li>
                }
            </ul>
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-info" asp-action="Index">Back</a>
        </div>

 </div>

