@model MenuProject.Models.Ingredient
@{
    ViewData["Title"] = "Create Ingredient";
}

<div class="container">
    <h3>
        Create Ingredient
    </h3>
    <div class="d-flex justify-content-center col-8">
        <form asp-controller="Ingredient" asp-action="Create" method="post">
            <label for="Name" class="form-label">Name</label>
            <input style="width:50%;" asp-for="Name" class="formcontrol" />
            
            <br />
            <button style="width: 20%; float:left; border:none; background:transparent; height:40px;" type="submit">Submit</button>
        </form>
    </div>
</div>